{% extends 'layout/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container">
        <div class="site-section">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-12">
                        <h2>Recent Posts</h2>
                    </div>
                </div>
                <div class="row">
                    {% for _news in news %}
                        <div class="col-lg-4 mb-4">
                            <div class="entry2">
                                <a href="single.html"><img src="{{ vich_uploader_asset(_news, 'imageFile') }}" alt="Image" class="img-fluid rounded"></a>
                                <div class="excerpt">

                                    <h2>
                                        <a href="single.html">{{ _news.title }}</a>
                                        <span class="createdAt">{{ _news.createdAt|ago }}</span>
                                    </h2>

                                    <p>{{ _news.description|slice(0,100) }}...</p>
                                    <p><a href="#" class="btn btn-outline-info">Read More</a></p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
